<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChallengeChapter5" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="title_style" parent="Theme.ChallengeChapter5">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="textFillColor">@color/black</item>
    </style>
    <style name="regular_style" parent="Theme.ChallengeChapter5">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/regular_size</item>
        <item name="textFillColor">@color/black</item>
    </style>
    <style name="MyDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

</resources>