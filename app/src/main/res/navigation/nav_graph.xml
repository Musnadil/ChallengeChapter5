<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginCompose">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.musnadil.challengechapter5.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailNewsFragment"
            app:destination="@id/detailNewsFragment"
            app:enterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out"
            app:exitAnim="@anim/fade_out"
            />
        <action
            android:id="@+id/action_homeFragment_to_updateUserFragment"
            app:destination="@id/updateUserFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginCompose"
            app:destination="@id/loginCompose" />

    </fragment>
    <fragment
        android:id="@+id/detailNewsFragment"
        android:name="com.musnadil.challengechapter5.ui.detailnews.DetailNewsFragment"
        android:label="fragment_detail_news"
        tools:layout="@layout/fragment_detail_news" >
        <action
            android:id="@+id/action_detailNewsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popEnterAnim="@anim/zoom_out"
            app:popUpToSaveState="true"
            app:popUpTo="@id/detailNewsFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_detailNewsFragment_to_webViewFragment"
            app:destination="@id/webViewFragment"
            app:enterAnim="@anim/zoom_in"
            app:popExitAnim="@anim/zoom_out"/>
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.musnadil.challengechapter5.ui.detailnews.WebViewFragment"
        android:label="fragment_web_view"
        tools:layout="@layout/fragment_web_view" />
    <dialog
        android:id="@+id/updateUserFragment"
        android:name="com.musnadil.challengechapter5.ui.updateuser.UpdateUserFragment"
        android:label="fragment_update_user"
        tools:layout="@layout/fragment_update_user" >
        <action
            android:id="@+id/action_updateUserFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="user"
            app:argType="com.musnadil.challengechapter5.data.room.entity.User" />
    </dialog>
    <fragment
        android:id="@+id/loginCompose"
        android:name="com.musnadil.challengechapter5.ui.auth.LoginCompose"
        android:label="LoginCompose" >
        <action
            android:id="@+id/action_loginCompose_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginCompose_to_registerCompose"
            app:destination="@id/registerCompose" />
    </fragment>
    <fragment
        android:id="@+id/registerCompose"
        android:name="com.musnadil.challengechapter5.ui.auth.RegisterCompose"
        android:label="RegisterCompose" >
        <action
            android:id="@+id/action_registerCompose_to_loginCompose"
            app:destination="@id/loginCompose" />
    </fragment>
</navigation>