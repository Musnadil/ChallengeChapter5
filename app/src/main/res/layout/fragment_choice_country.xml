<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_dialog"
    tools:context=".fragment.ChoiceCountryFragment">

    <TextView
        android:id="@+id/question"
        style="@style/home"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/mau_baca_berita_dari_negara_mana_hari_ini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_indonesia"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/question"
        app:layout_constraintStart_toStartOf="@id/question"
        app:layout_constraintEnd_toStartOf="@id/btn_malaysia">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/indonesian_flag"
            />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_malaysia"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/btn_indonesia"
        app:layout_constraintEnd_toEndOf="@id/question"
        app:layout_constraintStart_toEndOf="@id/btn_indonesia">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/malaysia_flag"
            />
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/separator"
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_indonesia"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

